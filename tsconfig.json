{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@ontomind/core": ["packages/core/src"],
        "@ontomind/dsl": ["packages/dsl/src"],
        "@ontomind/codegen": ["packages/codegen/src"],
        "@ontomind/validator": ["packages/validator/src"],
        "@ontomind/prompt": ["packages/prompt/src"],
        "@ontomind/port": ["packages/port/src"]
      },
      "types": ["node"],
      "lib": ["ES2020"]
    },
    "include": ["packages/*", "apps/*", "tools/*"]
}